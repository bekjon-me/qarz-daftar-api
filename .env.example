# Notification scheduler cron (default: 04:00 UTC = 09:00 UZT)
CRON_SCHEDULE="0 4 * * *"

# Docker Compose (used by docker-compose.yml)
POSTGRES_USER=qarz
POSTGRES_PASSWORD=qarz_secret
POSTGRES_DB=qarz_daftar
